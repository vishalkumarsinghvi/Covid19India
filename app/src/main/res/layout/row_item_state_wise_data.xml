<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/tv_total"
    android:layout_width="85dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/white"
    android:ems="5"
    android:gravity="start|center_vertical"
    android:text="@string/blank"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  <TextView
    android:id="@+id/tv_confirmed_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:background="@android:color/white"
    android:ems="3"
    android:gravity="start|center_vertical"
    android:text="@string/blank"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@+id/tv_total"
    app:layout_constraintStart_toEndOf="@+id/tv_total"
    app:layout_constraintTop_toTopOf="@+id/tv_total" />
  <TextView
    android:id="@+id/tv_recovered_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:background="@android:color/white"
    android:ems="4"
    android:gravity="center"
    android:text="@string/blank"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@+id/tv_confirmed_number"
    app:layout_constraintStart_toEndOf="@+id/tv_confirmed_number"
    app:layout_constraintTop_toTopOf="@+id/tv_confirmed_number" />
  <TextView
    android:id="@+id/tv_deaths_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:background="@android:color/white"
    android:ems="2"
    android:gravity="start|center_vertical"
    android:text="@string/blank"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@+id/tv_recovered_number"
    app:layout_constraintStart_toEndOf="@+id/tv_recovered_number"
    app:layout_constraintTop_toTopOf="@+id/tv_recovered_number" />
  <TextView
    android:id="@+id/tv_active_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:background="@android:color/white"
    android:ems="4"
    android:gravity="start|center_vertical"
    android:text="@string/blank"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@+id/tv_deaths_number"
    app:layout_constraintStart_toEndOf="@+id/tv_deaths_number"
    app:layout_constraintTop_toTopOf="@+id/tv_deaths_number" />
</androidx.constraintlayout.widget.ConstraintLayout>